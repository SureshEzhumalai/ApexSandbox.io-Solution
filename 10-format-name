public String formatName(String firstName, String lastName) {
    //code here
    if((firstName == null || firstName == '') && (lastName== null || lastName =='')){
        return '';
    }else if(firstName == null || firstName == ''){
        return lastName;
    }else if(lastName == null || lastName == ''){
        return firstName;
    }else{
        return lastName + ', ' + firstName;
    }

}